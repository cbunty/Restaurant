@using RestaurantManagement.Domain.DTO.Response
@model AdminResponseModel
@{
    ViewBag.Title = "Login";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Login</h2>
    </div>
<form method="post" asp-controller="Admin" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="UserName"></label>
                <input class="form-control mb-3" asp-for="UserName" type="text" placeholder="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control mb-3" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Login</button>
</form>  
</div>